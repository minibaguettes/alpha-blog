<h1>Edit article</h1>

<% if @article.errors.any? %>
  <h2>The following errors prevented the article from being saved</h2>
  <ul>
    <% @article.errors.full_messages.each do |msg| %> <!-- go thru each msg-->
      <li><%= msg %></li>  <!-- display each msg-->
    <% end %>
  </ul>
<% end %>

<%= form_with(model: @article, local: true) do |f| %>
<!-- within parenthesis will ensure it is submitted to update action in form /articles/:id -->

    <p>
        <%= f.label :title %><br/>
        <%= f.text_field :title %>
    </p>

    <p>
        <%= f.label :description %><br/>
        <%= f.text_area :description %>
    </p>

    <p>
        <%= f.submit %>
    </p>

<% end %>

<%= link_to 'Cancel and return to articles listing', articles_path %>