<h1>Articles listing page</h1>

<table>
	<thead>
		<tr>
			<th>Title</th>
			<th>Description</th>
			<th>Author</th>
			<th colspan="3">Actions</th>	<!-- colspan="3" to make the actions col cover all the links in <tr> -->
		</tr>
	</thead>

	<tbody>
		<% @articles.each do |article| %>
		<tr>
			<td><%= article.title %></td>
			<td><%= article.description %></td>
			<td><%= article.user.username if article.user %></td>
			<td><%= link_to 'Show', article_path(article) %>
			<td><%= link_to 'Edit', edit_article_path(article) %>	
			<td><%= link_to 'Delete', article_path(article), data: {
				turbo_method: :delete,
				turbo_confirm: "Are you sure?"
			} %></td>
			
		</tr>
		<% end %>
	</tbody>
</table>
<p>
	<%=link_to 'Create new article', new_article_path %>
</p>