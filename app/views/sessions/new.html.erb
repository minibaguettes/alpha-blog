<h1>Log in</h1>

<!-- not model, so rails dk where to send to, so include route -->
<%= form_with(scope: :session, url: login_path, local: true) do |f| %>

  <p>
    <%= f.label :email %><br/>
    <%= f.email_field :email, placeholder: "Enter your email address" %>
  </p>

  <p>
    <%= f.label :password %><br/>
    <%= f.password_field :password, placeholder: "Enter your password" %>
  </p>

  <p>
    <%= f.submit "Log in" %>
  </p>

  <%= link_to 'Cancel and return to articles listing', articles_path %>

<% end %>